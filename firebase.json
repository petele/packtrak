{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*",
        "headers": [
          {
            "key": "cache-control",
            "value": "max-age=86400"
          }
        ]
      },
      {
        "source": "sw*.js",
        "headers": [
          {
            "key": "cache-control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "**/*.@(map)",
        "headers": [
          {
            "key": "cache-control",
            "value": "no-cache"
          }
        ]
      }
    ]
  }
}
